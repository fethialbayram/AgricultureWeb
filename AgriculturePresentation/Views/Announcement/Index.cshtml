@using EntityLayer.Concrete
@model List<Announcement>

@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th> #</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                            <th>Durumu Değiştir</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Title</td>
                                <td>@item.Date</td>
                                <td><a href="/Announcement/DeleteAnnouncement/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Announcement/EditAnnouncement/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
                                <td>
                                    @if (item.Status)
                                    {
                                        <a href="/Announcement/ChangeStatus/@item.Id" class="btn btn-outline-dark">Pasif Yap</a>
                                    }
                                    else
                                    {
                                        <a href="/Announcement/ChangeStatus/@item.Id" class="btn btn-outline-warning">Aktif Yap</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Announcement/AddAnnouncement" class="btn btn-outline-info">Yeni Duyuru Girişi</a>
            </div>
        </div>
    </div>
</div>
