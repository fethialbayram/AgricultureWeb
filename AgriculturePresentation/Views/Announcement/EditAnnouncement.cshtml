@model EntityLayer.Concrete.Announcement

@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Duyuru Girişi</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.Id)
                <div class="form-group">
                    <label for="exampleInputName1" asp-for="Title">Başlık</label>
                    <input type="text" class="form-control" placeholder="Başlık Giriniz" asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1" asp-for="Date">Tarih</label>
                    <input type="date" class="form-control" placeholder="Tarih Giriniz" asp-for="Date">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3" asp-for="Description">Açıklama</label>
                    <textarea asp-for="Description" cols="30" rows="5" placeholder="Açıklama Giriniz" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
            </form>
        </div>
    </div>
</div>