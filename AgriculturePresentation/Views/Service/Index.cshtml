@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
}

<h1>Hizmetler</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td><a href="/Service/DeleteService/@item.Id" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Service/EditService/@item.Id" class="btn btn-outline-warning">Düzenle</a></td>
        </tr>
    }
</table>
<a class="btn btn-outline-info" href="/Service/AddService">Yeni Hizmet Girişi</a>

