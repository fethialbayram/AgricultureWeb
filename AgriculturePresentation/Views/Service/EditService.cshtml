@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Hizmet Güncelleme Sayfası</h1>

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmet Düzenleme Sayfası</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.Id)
                <div class="form-group">
                    <label for="exampleInputName1" asp-for="Title">Başlık</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="" asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3" asp-for="Image">Görsel</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="URL" asp-for="Image">
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1" asp-for="Description">Açıklama</label>
                    <textarea class="form-control" id="exampleTextarea1" rows="4" asp-for="Description"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
            </form>
        </div>
    </div>
</div>

