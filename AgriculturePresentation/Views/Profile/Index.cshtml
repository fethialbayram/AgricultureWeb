@model AgriculturePresentation.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">PROFİL DÜZENLEME SAYFASI</h4>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1" asp-for="mail">E-posta Adresi</label>
                    <input type="text" class="form-control" placeholder="E-posta" asp-for="mail">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3" asp-for="phone">Telefon Numarası</label>
                    <input type="text" class="form-control" placeholder="örn. 05389759098" asp-for="phone">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3" asp-for="password">Parola</label>
                    <input type="text" class="form-control" placeholder="Parola" asp-for="password">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3" asp-for="confirmPassword">Parola Tekrar</label>
                    <input type="text" class="form-control" placeholder="Parola Tekrar" asp-for="confirmPassword">
                </div>
                <button type="submit" class="btn btn-outline-info">Güncelle</button>
            </form>
        </div>
    </div>
</div>

